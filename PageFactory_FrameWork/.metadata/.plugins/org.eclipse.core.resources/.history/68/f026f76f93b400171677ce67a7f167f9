package com.test.automation.uiAutomation.uiActions;

import org.apache.log4j.Logger;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.support.PageFactory;

public class ProductListigPage {
	
	public static final Logger log = Logger.getLogger(ProductListigPage.class.getName());
	WebDriver driver;
	
	public ProductListigPage(WebDriver driver) {
		this.driver = driver;
		PageFactory.initElements(driver, this); // This is a construct that will initialize all the webelements defined above.
	}
	
	
	public void selectProductAs(String productTitle){
		driver.findElement(By.xpath("//div[@class= 'product-image-container']/a[@class='product_img_link' and @title='"+productTitle+"']")).click();
		
	}
	
	
}
